include ../../mixins

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width,initial-scale=1")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Arcanum (Mobile)
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto:400,500&display=swap&subset=cyrillic")
    link(rel="stylesheet", href="../themes/base/typography.styl")
    block head

    link(rel="stylesheet", href="../themes/base/layout.styl")

    include ../../components/header/block
    include ../../components/logo/block
    include ../../components/dropdown/block
    include ../../components/menu/block

    include ../../components/footer/block

  +b.BODY.Layout.Typography.Theme--mobile
    block scripts

    mixin wrap
      +e.wrap&attributes(attributes)
        block

    mixin scrollarea
      +e.scrollarea&attributes(attributes)
        block

    +Header.__header
      +Logo.Link.__logo(href="#"): +svg(118, 20, '../assets/logo.svg')
      +Dropdown('<span><b>Repository</b> Arc</span>').__item--accent
        +Menu.--scrollable.__content
          +link(href="#") Arc
          +link(href="#") My repository
          +link(href="#") Devtools-team repository

    +e.content
      block content

    +Footer.__footer