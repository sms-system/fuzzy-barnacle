+b('button')
  display flex
  background #E6E6E6
  border-radius 3px
  text-decoration none
  transition .2s background-color
  color #000
  font-size 13px
  line-height 15px
  padding 6px 12px

  +m('with_border')
    background #f5f5f5
    border solid 1px #CCCCCC

  +e('icon')
    margin-right 6px

  &:hover
    background #ccc