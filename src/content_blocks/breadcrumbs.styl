+b('breadcrumbs')
  list-style-type none
  padding 11px 0
  margin 0
  font-size 14px
  line-height 20px
  border-bottom solid 1px #E5E5E5

  +e('item')
    margin-right 12px
    display inline-block

    &::after
      content '/'
      margin-left 12px

    &:last-child
      margin-right 0
      &::after
        display none

    +m('active')
      font-weight 500

  +e('link')
    text-decoration none
    color #7F8285

    &:hover
      text-decoration underline
      color #1774E9