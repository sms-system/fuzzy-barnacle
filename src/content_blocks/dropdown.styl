+b('dropdown')
  font-size 14px
  line-height 18px
  padding-right 18px
  cursor pointer

  +e('visible_item')
    height 100%
    box-sizing border-box
    display flex
    align-items center
    position relative

    &::after
      content ''
      position absolute
      right -18px
      top 50%
      width 12px
      height 12px
      margin-top -(@height / 2)
      background url('./assets_css/arrow-down-outline.svg') no-repeat center
      transition transform .2s

    +m('accent')
      transform translateY(1px)
      { mod_accent_nav_item }

  +e('primary')
    font-weight 500
    margin-right 3px

  +e('menu_items')
    z-index 1
    position absolute
    opacity 0
    visibility hidden
    list-style none
    margin 0
    padding 6px 0
    background #FFF
    box-shadow 0px 4px 16px rgba(53, 73, 93, 0.2)
    transform translateY(-20px)
    transition opacity .2s, transform .2s, visibility .2s

  +e('menu_item')
    padding 8px 22px

  +e('menu_link')
    text-decoration none
    color #000

  +m('in_title')
    +e('visible_item')
      font-size 24px
      line-height 28px

  +m('is_gray')
    color #7F8285
    +e('visible_item')
      &::after
        background url('./assets_css/arrow-down-outline-gray.svg') no-repeat center

  +m('is-openned')
    +e('menu_items')
      visibility visible
      opacity 1
      transform translateY(0)
    +e('visible_item')
      &::after
        transform rotate(-180deg)