@import '../../mixins'

+b('Breadcrumbs')
  border-bottom: 1px solid COLORS.IN_CONTENT_LINE

  list-style: none
  margin: 0
  padding: 12px 0

  +e('item')
    display: inline-block
    margin-right: 12px

    &::after
      content: '/'
      margin-left: 12px

    &:last-child
      margin-right: 0

      &::after
        display: none

  +e('link')
    color: COLORS.SECONDARY
    text-decoration: none
    &:hover
      color: COLORS.LINK

    +m('active')
      color: COLORS.PRIMARY
      font-weight: 500
      &:hover
        color: COLORS.PRIMARY