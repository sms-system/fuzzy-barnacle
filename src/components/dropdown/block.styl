@import '../../mixins'

+b('Dropdown')
  display: inline-block
  &:focus
    outline: 0

  +e('current')
    cursor: pointer
    position: relative
    display: flex
    align-items: center
    height: 100%

    &::before
      content: ''
      display: block
      width: 20px

      position: absolute
      top: 0
      right: -(@width)
      bottom: 0

    &::after
      content: ''
      display: block
      width: 12px
      height: 12px
      background: url('../../assets/arrow-down-outline.svg') center no-repeat

      position: absolute
      top: 50%
      right: -16px
      margin-top: -(@height / 2)

      transition: transform ANIMATIONS.TIME

  +e('content')
    visibility: hidden
    opacity: 0
    transform: translateY(-20px)

    box-shadow: 0 4px 16px rgba(53, 73, 93, .2)

    transition: opacity ANIMATIONS.TIME, transform ANIMATIONS.TIME, visibility ANIMATIONS.TIME

    z-index: 1
    position: absolute

  +m('is-openned')

    +e('current')
      &::after
        transform: rotate(-180deg)

    +e('content')
      visibility: visible
      opacity: 1
      transform: translateY(3px)