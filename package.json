{
  "private": true,
  "name": "shri-2019-arcanum-app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "yarn workspace webapp extract-matcher",
    "build": "yarn workspace webapp build",
    "start:webapp": "yarn workspace webapp start",
    "start:api": "yarn workspace api start",
    "start": "sh -c 'concurrently -k -c cyan.bold -n API,WEBAPP \"yarn start:api $([[ $0 != sh ]] && echo $0) $@\" \"yarn start:webapp $([[ $0 != sh ]] && echo $0) $@\"'"
  },
  "dependencies": {
    "concurrently": "^5.0.0",
    "convict": "^5.1.0",
    "js-yaml": "^3.13.1"
  }
}
